<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp">

    <RelativeLayout
        android:id="@+id/menu_icon_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/order_content_button_bg_size"
        android:layout_height="@dimen/order_content_button_bg_size"
        android:background="@drawable/order_content_more_bg">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="@dimen/order_content_image_size"
            android:layout_height="@dimen/order_content_image_size"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/menu_title"
        android:layout_below="@id/menu_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="1111111"
        android:textSize="@dimen/order_content_text_size" />
</RelativeLayout>

