<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#E7ECEF"
    android:layout_height="match_parent">
    <TextView
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:text="附件同步方式"
        android:gravity="left|center"
        android:layout_height="25dp"
        />
    <RelativeLayout
        android:background="@color/white"
        android:foreground="@drawable/ripple_bg_white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:id="@+id/always"
        android:orientation="horizontal"
        android:layout_height="43dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="始终"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:src="@drawable/setting_selected"
            android:layout_width="14dp"
            android:id="@+id/always_iv"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:foreground="@drawable/ripple_bg_white"
        android:id="@+id/wifi"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="43dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="仅WIFI条件下同步"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/wifi_iv"
            android:src="@drawable/setting_selected"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/left_files_number"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:text="未同步附件数(1)"
        android:gravity="left|center"
        android:layout_height="25dp"
        />
    </LinearLayout>
    <info.futureme.abs.example.view.NestedRecyclerView
        android:id="@+id/recycler_data_sync"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_immedite_sync"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:text="立即同步"
        android:textColor="#cc1b1b"
        android:textSize="@dimen/profile_header_textsize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
