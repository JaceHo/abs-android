<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:background="#f0eff5"
    android:orientation="horizontal"
    android:paddingLeft="14dp">

    <LinearLayout
        android:id="@+id/notification_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/notification_alart_info_interval"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/notification_type_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/notification_type_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="招聘宣传"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingRight="44dp">

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notification_bg_selector"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/notification_info_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/notification_describe_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/notification_alart_info_interval"
                    android:layout_marginRight="@dimen/notification_alart_info_interval"
                    android:text="短期工程师招聘啦"
                    android:textColor="#404040" />

                <ImageView
                    android:id="@+id/notification_advertisement"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/notification_describe_info"
                    android:layout_marginLeft="@dimen/notification_alart_info_interval"
                    android:layout_marginRight="@dimen/notification_alart_info_interval"
                    android:layout_marginTop="@dimen/notification_alart_info_interval"
                    />

                <RelativeLayout
                    android:id="@+id/requirements_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/notification_advertisement"
                    android:layout_below="@id/notification_advertisement"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="点击查看详情"
                        android:textColor="#3783d1"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/notification_info_layout"
            android:layout_below="@id/notification_info_layout"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/notification_alart_info_interval"
            android:layout_marginTop="@dimen/notification_alart_info_interval"
            android:foregroundGravity="right"
            android:text="2015/10/26 10:10:10"
            android:textColor="#8f8e94"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
