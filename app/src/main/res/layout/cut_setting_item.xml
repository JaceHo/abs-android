<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    style="@style/itemSettingStyle"
    android:layout_height="@dimen/setting_shortcut_key_layout_height"
    android:orientation="horizontal">

    <TextView
        android:layout_height="wrap_content"
        style="@style/titleSettingStyle"
        android:layout_width="wrap_content"
        android:id="@android:id/title"/>

    <CheckBox
        android:layout_width="@dimen/switch_width"
        android:layout_height="@dimen/switch_height"
        style="@style/checkboxSettingStyle"
        android:id="@android:id/checkbox"
        />
</RelativeLayout>
