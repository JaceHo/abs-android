<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="10dp"
    android:background="@color/app_default_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/ripple_bg_white"
            android:layout_height="88dp"
            android:layout_width="match_parent"
            >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/avatar"
                android:layout_toRightOf="@+id/avatar"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textColor="@color/order_filter_button_textcolor"
                    android:textSize="@dimen/profile_header_textsize" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="New Text"
                    android:textColor="@color/nav_header_engineer_job_text_color"
                    android:textSize="@dimen/nav_header_engineer_text_size" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginBottom="13dp"
            android:background="@color/white"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_modify_phone"
                android:background="@drawable/ripple_bg_white"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center_vertical">

                <ImageView
                    android:background="@drawable/phone_tip"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/modify_phone_number"
                    android:textColor="@color/order_filter_button_textcolor"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@+id/imageView2"/>

                <ImageView
                    android:id="@+id/image_orderNumberIndicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/setting_back" />

            </RelativeLayout>
            </FrameLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/setting_shortcut_key_short_line_color" />

            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:background="@drawable/ripple_bg_white"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="center_vertical"
                android:id="@+id/rl_modify_password"
                android:gravity="center_vertical">

                <ImageView
                    android:background="@drawable/lock_tip"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/modify_password"
                    android:textColor="@color/order_filter_button_textcolor"
                    android:textSize="14sp"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/image_ncustoNumberIndicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/setting_back" />

            </RelativeLayout>
            </FrameLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:background="@color/setting_shortcut_key_short_line_color" />

        </LinearLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/btn_login_out"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:text="@string/login_out"
        android:layout_margin="10dp"
        android:textColor="#cc1b1b"
        android:textSize="@dimen/profile_header_textsize" />
</LinearLayout>

