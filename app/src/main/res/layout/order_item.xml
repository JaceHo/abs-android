<?xml version="1.0" encoding="utf-8"?>
<info.futureme.abs.example.widget.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/repo_card_ex"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Bottom View Start-->
    <LinearLayout
        android:background="#66ddff00"
        android:id="@+id/bottom_wrapper"
        android:layout_width="160dp"
        android:weightSum="1"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--What you want to show-->
        <TextView
            android:text="Action"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        android:background="@drawable/ripple_bg_white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#c8c7cc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/text_orderListItem_top1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33333333"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#404040"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_orderListItem_top2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" />

                <ImageView
                    android:id="@+id/image_orderListItem_top3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_orderlistitem_orderlevelhign" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:background="#e0e0e0" />

            <RelativeLayout
                android:id="@+id/relative_orderListItem_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">


                <LinearLayout
                    android:id="@+id/linear_orderListItem_cotent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_text_orderListItem_content1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/order_item_image_size"
                            android:layout_height="@dimen/order_item_image_size"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/icon_orderlistitem_giveorder_time" />

                        <TextView
                            android:id="@+id/text_orderListItem_content1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="11111111"
                            android:textColor="#808080"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_text_orderListItem_content2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/order_item_image_size"
                            android:layout_height="@dimen/order_item_image_size"
                            android:layout_gravity="top"
                            android:background="@drawable/icon_orderlistitem_giveorder_distance" />

                        <TextView
                            android:id="@+id/text_orderListItem_content2"
                            android:layout_width="150dp"
                            android:maxLines="2"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_orderListItem_content2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#3982d1"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_text_orderListItem_content3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/order_item_image_size"
                            android:layout_height="@dimen/order_item_image_size"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/icon_orderlistitem_giveorder_desc" />

                        <TextView
                            android:id="@+id/text_orderListItem_content3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:maxLength="30"
                            android:textColor="#808080"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relative_orderListItem_buttonMain"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/linear_orderListItem_cotent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_orderListItem_BtnText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="#3982d1"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/loadingPb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/shortcut_image"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/relative_orderListItem_buttonMain"
                    android:layout_alignRight="@+id/relative_orderListItem_buttonMain"
                    android:layout_alignEnd="@+id/relative_orderListItem_buttonMain"
                    android:layout_alignLeft="@+id/relative_orderListItem_buttonMain"
                    android:layout_alignStart="@+id/relative_orderListItem_buttonMain" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_orderListItem_bottom"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_orderListItem_bottom1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" />

                    <TextView
                        android:id="@+id/text_orderListItem_bottom2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#c8c7cc" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <!-- Surface View End -->
</info.futureme.abs.example.widget.swipe.SwipeLayout>

