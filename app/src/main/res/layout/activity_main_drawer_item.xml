<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="wrap_content"
             xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent">
<LinearLayout
    android:layout_height="50dp"
    android:layout_width="match_parent"

    android:layout_gravity="center_vertical"
    android:background="@drawable/ripple_bg_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/nav_view_item_margin_left"
    android:paddingRight="@dimen/nav_view_item_margin_left"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/nav_view_drawer_image"
            android:layout_width="@dimen/nav_view_drawer_item_image_size"
            android:layout_height="@dimen/nav_view_drawer_item_image_size"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nav_view_drawer_image_text_margin"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nav_view_drawer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="@string/nav_view_maintenance_manual"
                    android:textColor="@color/nav_view_drawer_item_text_color"
                    android:textSize="@dimen/nav_view_drawer_item_text_size" />

                <TextView
                    android:id="@+id/nav_view_drawer_alart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/nav_view_alert_blue_shape"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white"
                    android:textSize="@dimen/nav_view_drawer_item_alart_text_size" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
