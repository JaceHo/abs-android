<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/layout_icon_address_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_icon_address_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/to_door_address"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_toRightOf="@id/layout_icon_address_search"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_addr_shop_detail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:gravity="bottom|left"
                android:textColor="#000"
                android:text="标题"/>
            <TextView
                android:id="@+id/tv_addr_district"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:singleLine="true"
                android:textSize="13sp"
                android:gravity="left|top"
                android:text="地址"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_distance_item_search_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text=""/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d1d1d1"/>
</LinearLayout>
